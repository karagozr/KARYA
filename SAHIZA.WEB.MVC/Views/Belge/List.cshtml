@model IEnumerable<SAHIZA.MODEL.Entities.Belge>

@{
    Layout = "_Layout";
    ViewData["Title"] = "Liste";
}

<section>
    <div>
        <div class="row">
            <div class="col-12">
                <div class="card list-card">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-6">
                                <h3 class="card-title">Belgeler</h3>
                            </div>
                            <div class="col-6">
                                <div class="btn-group" style="float: right">
                                    <a class="btn btn-block bg-gradient-success" onclick="DizaynList()"><i class="far fa-plus-square"></i> Yeni Ekle</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <table id="belgeTable" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Belge Adi</th>
                                    <th>Açıklama</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td>
                                        <a href="/belge/Edit?Id=@item.Id">@item.Adi</a>
                                    </td>
                                    <td>@item.Aciklama</td>
                                    <td>
                                        <a href="/belge/Show?Id=@item.Id">Belge Aç</a>
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<partial name="../partial/dizayn/dizaynguide" />
<script src="~/plugins/jquery/jquery.min.js"></script>
<!-- Bootstrap 4 -->


<script>
    $(function () {
        $('#belgeTable').DataTable({
            "paging": true,
            "lengthChange": true,
            "searching": true,
            "ordering": true,
            "info": true,
            "autoWidth": true,
            "responsive": true,
        });
    });
</script>