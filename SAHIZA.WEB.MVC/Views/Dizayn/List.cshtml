@model IEnumerable<SAHIZA.MODEL.Entities.Dizayn>

@{
    Layout = "_Layout";
    ViewData["Title"] = "List";
}

<section>
    <div>
        <div class="row">
            <div class="col-12">
                <div class="card list-card">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-6">
                                <h3 class="card-title">Dizayn Kartları</h3>
                            </div>
                            <div class="col-6">
                                <div class="btn-group" style="float: right">
                                    <a href="/dizayn/edit" class="btn btn-block bg-gradient-success"><i class="far fa-plus-square"></i> Yeni Ekle</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <table id="dizaynListTable" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Dizayn Kodu</th>
                                    <th>Dizayn Adi</th>
                                    <th>Açıklama</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <a href="/dizayn/edit?Id=@item.Id">@item.DizaynKodu</a>
                                        </td>
                                        <td>@item.DizaynAdi</td>
                                        <td>@item.Aciklama</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="~/plugins/jquery/jquery.min.js"></script>
<!-- Bootstrap 4 -->


<script>
    $(function () {
        $('#dizaynListTable').DataTable({
            "paging": true,
            "lengthChange": true,
            "searching": true,
            "ordering": true,
            "info": true,
            "autoWidth": true,
            "responsive": true,
        });
    });
</script>